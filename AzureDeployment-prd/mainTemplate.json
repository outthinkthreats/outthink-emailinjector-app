{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region for deploying the App Service and related resources."
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "B1",
      "allowedValues": ["B1", "B2", "S1", "S2"],
      "metadata": {
        "description": "App Service Plan pricing tier (SKU)."
      }
    },
    "keyVaultUrl": {
      "type": "string",
      "metadata": {
        "description": "URL of the Azure Key Vault to be used by the application."
      }
    },
    "apiBaseUrl": {
      "type": "string",
      "defaultValue": "https://outthink-api-public.ot-services-prd.net",
      "metadata": {
        "description": "(Optional) Base URL for the email injector API."
      }
    },
    "artifactsLocation": {
      "type": "string",
      "defaultValue": "[if(contains(deployment().properties, 'templateLink'), concat(substring(deployment().properties.templateLink.uri, 0, add(lastIndexOf(deployment().properties.templateLink.uri, '/'), 1)), ''), 'https://')]",
      "metadata": {
        "description": "The base URI of the Managed Application artifacts."
      }
    },
    "artifactsLocationSasToken": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "(Optional) SAS token for the artifactsLocation if required."
      }
    }
  },
  "variables": {
    "appName": "outthink-emailinjectorapp",
    "planName": "outthink-emailinjectorapp-plan"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-02-01",
      "name": "[variables('planName')]",
      "location": "[parameters('location')]",
      "kind": "linux",
      "sku": {
        "name": "[parameters('sku')]",
        "tier": "[if(startsWith(parameters('sku'), 'B'), 'Basic', 'Standard')]",
        "capacity": 1
      },
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[variables('appName')]",
      "location": "[parameters('location')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "httpsOnly": true,
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('planName'))]",
        "siteConfig": {
          "linuxFxVersion": "DOTNETCORE|8.0",
          "appCommandLine": "dotnet /home/site/wwwroot/OutThink.EmailInjectorApp.dll",
          "alwaysOn": true
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('planName'))]"
      ],
      "resources": [
        {
          "type": "config",
          "name": "appsettings",
          "apiVersion": "2021-02-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('appName'))]"
          ],
          "properties": {
            "WEBSITE_RUN_FROM_PACKAGE": "[uri(parameters('artifactsLocation'), concat('app.zip', parameters('artifactsLocationSasToken')))]",
            "ASPNETCORE_URLS": "http://0.0.0.0:8080",
            "KeyVaultUrl": "[parameters('keyVaultUrl')]",
            "ApiBaseUrl": "[parameters('apiBaseUrl')]",
            "BatchSize": "50",
            "SkipConfirmation": "false"
          }
        }
      ]
    }
  ],
  "outputs": {
    "appServiceName": {
      "type": "string",
      "value": "[variables('appName')]"
    },
    "appServicePlanName": {
      "type": "string",
      "value": "[variables('planName')]"
    },
    "webAppUrl": {
      "type": "string",
      "value": "[format('https://{0}.azurewebsites.net', variables('appName'))]"
    },
    "identityPrincipalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Web/sites', variables('appName')), '2021-02-01', 'Full').identity.principalId]"
    }
  }
}
